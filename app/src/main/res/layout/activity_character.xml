<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CharacterActivity"
    android:background="@color/whitesmoke">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_character_header">

        <TextView
            android:id="@+id/campaign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campaign_name"
            android:textSize="32sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginVertical="25dp"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_character_header"
        android:background="@color/whitesmoke">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/activity_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/character_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="4dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/character_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/character_name"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/character_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_toEndOf="@id/character_name"
                        android:layout_marginStart="12dp"
                        android:text="[Genre]"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="13dp"
                        android:layout_toStartOf="@id/character_level"
                        android:layout_marginEnd="8dp"
                        android:text="Lv"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/character_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="25dp"
                        android:textSize="17sp"
                        android:text="10"
                        android:textColor="@color/black"/>


                    <TextView
                        android:id="@+id/altezza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/character_name"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:text="Altezza:"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/character_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/altezza"
                        android:layout_marginStart="8dp"
                        android:layout_below="@id/character_name"
                        android:layout_marginTop="11dp"
                        android:text="192"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/character_height"
                        android:layout_below="@id/character_name"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="14dp"
                        android:text="cm"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>


                    <TextView
                        android:id="@+id/eta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/altezza"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:text="Eta:"
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/character_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/eta"
                        android:layout_marginStart="8dp"
                        android:layout_below="@id/altezza"
                        android:layout_marginTop="11dp"
                        android:text="27"
                        android:textSize="17sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/anni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/character_age"
                        android:layout_below="@id/altezza"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="14dp"
                        android:text="anni"
                        android:textSize="14sp"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/character_race"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/separator"
                        android:layout_below="@id/eta"
                        android:layout_marginEnd="13dp"
                        android:layout_marginTop="7dp"
                        android:text="Razza"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/separator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/eta"
                        android:layout_marginTop="4dp"
                        android:text="---"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/character_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/separator"
                        android:layout_below="@id/eta"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="7dp"
                        android:text="Classe"
                        android:textSize="18dp"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/character_stats"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_toStartOf="@id/activity_center"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="15dp"
                android:layout_below="@id/character_info" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/character_currency"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_toEndOf="@id/activity_center"
                android:layout_below="@id/character_info"
                app:cardCornerRadius="15dp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_toEndOf="@id/activity_center"
                android:layout_below="@id/character_currency"
                app:cardCornerRadius="15dp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>