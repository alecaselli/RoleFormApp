                                android:layout_height="wrap_content"
                                android:fontFamily="casual"
                                android:text="Il carisma corrisponde alla forza della personalità, alla capacità di persuasione, al fascino ed alla predisposizione al comando di un personaggio, tipicamente accattivante o intimidatorio."
                                android:textColor="@color/grey"
                                android:textSize="13sp"
