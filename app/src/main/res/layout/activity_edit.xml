<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context=".ui.EditActivity">

    <RelativeLayout
        android:id="@+id/edit_header_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:layout_marginStart="15dp"
            android:text="@string/edit"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/edit_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_header_relativelayout"
        android:background="@color/whitesmoke">

        <RelativeLayout
            android:id="@+id/edit_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_first_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="4dp"
                app:cardCornerRadius="15dp">

                <EditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="textStart"
                    android:inputType="textCapSentences"
                    android:text="@string/edit"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:onClick="aggiornaTestoEdit"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_first_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/gradient"
                app:cardCornerRadius="15dp" >

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="aggiornaTestoEdit"
                    android:background="?android:selectableItemBackground"
                    android:text="@string/salva"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>